var str = "Hello";
var length = 8;
var variable = true;
var symbol = "*";
var space = symbol;

function test(str, length, symbol, variable) {
    if (variable === true && str.length === length) {
        return str;
    } else if (variable === true && str.length < length) {
        return str + space.repeat(length - str.length)  
    } else {
        return space.repeat(length - str.length) + str
    }
}

console.log(test(str, length, symbol, variable));

